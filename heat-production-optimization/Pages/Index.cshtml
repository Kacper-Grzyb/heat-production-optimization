@page
@model IndexModel

<h1>Asset Manager</h1>

@await Component.InvokeAsync("DataUpload")

<br>

<div class="row">
    <img src="~/images/gas_boiler.png" alt="Gas Boiler" class="col" style="max-height: 230px; max-width: 457px"/>
    <div class="col" style="max-height:230px">
        <br>Name: @Model.gasBoiler.Name
        <br>Maximum Produced Heat: @Model.gasBoiler.MaxHeat MW
        <br>Production Cost: @Model.gasBoiler.ProductionCost DKK/MWh
        <br>CO2 Emissions: @Model.gasBoiler.CO2Emission kg/MWh
        <br>Gas Consumption: @Model.gasBoiler.GasConsumption MWh(gas)/MWh(heat)
    </div>
</div>


<br>

<div class="row">
    <img src="~/images/oil_boiler.png" alt="Oil Boiler" class="col" style="max-height: 230px; max-width: 457px" />
    <div class="col" style="max-height: 230px;">
        <br>Name: @Model.oilBoiler.Name
        <br>Maximum Produced Heat: @Model.oilBoiler.MaxHeat MW
        <br>Production Cost: @Model.oilBoiler.ProductionCost DKK/MWh
        <br>CO2 Emissions: @Model.oilBoiler.CO2Emission kg/MWh
        <br>Oil Consumption: @Model.oilBoiler.OilConsumption MWh(oil)/MWh(heat)
    </div>
</div>
